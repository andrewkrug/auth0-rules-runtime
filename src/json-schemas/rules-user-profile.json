{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "description": "Auth0 rules user profile",
  "definitions": {
    "userIdentity": {
      "type": "object",
      "require": [
        "connection",
        "isSocial",
        "provider",
        "user_id"
      ],
      "properties": {
        "connection": {
          "type": "string"
        },
        "isSocial": {
          "type": "boolean"
        },
        "provider": {
          "type": "string"
        },
        "user_id": {
          "type": "string"
        }
      }
    }
  },
  "type": "object",
  "required": [
    "blocked",
    "created_at",
    "email",
    "email_verified",
    "identities",
    "last_ip",
    "last_login",
    "logins_count",
    "name",
    "nickname",
    "picture",
    "updated_at",
    "user_id"
  ],
  "properties": {
    "app_metadata": {
      "type": "object"
    },
    "blocked": {
      "type": "boolean",
      "default": false
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "email_verified": {
      "type": "boolean"
    },
    "identities": {
      "type": "array",
      "item": {
        "$ref": "#/definitions/userIdentity"
      },
      "minItems": 1
    },
    "multifactor": {
      "type": "array"
    },
    "last_ip": {
      "type": "string",
      "format": "ipv4"
    },
    "last_login": {
      "type": "string",
      "format": "date-time"
    },
    "logins_count": {
      "type": "number",
      "minimum": 0
    },
    "name": {
      "type": "string"
    },
    "nickname": {
      "type": "string"
    },
    "phone_number": {
      "type": "string"
    },
    "phone_verified": {
      "type": "boolean"
    },
    "picture": {
      "type": "string",
      "format": "uri"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "user_id": {
      "type": "string"
    },
    "user_metadata": {
      "type": "object"
    },
    "username": {
      "type": "string"
    }
  }
}
